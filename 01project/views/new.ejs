    <script type="text/javascript" src="/js/add.js"></script>
    <link href="/css/Add.css" rel="stylesheet" type="text/css">
    <div class="contailner" style="height: 50px;">
        <div class="row">
            <div class="col-md-6">
                <div id="arrow-text">
                    <a href="/visited"><img id="arrow" class="logo" src="/UX/arrow.svg"></a>Add Places
                </div>
                <img class="logo" src="/UX/travel-illustration.svg">
            </div>
            <div class="col-md-6">
                <div class="row" id="updateform">
                    <div id="form">
                        <form action="/visited" method="POST" onsubmit="return my()" name="myform">
                            <h4 id="text">Add Details about the place where you have visited</h4>
                            <div class="form-group">
                                <label for="city">City</label>
                                <input class="form-control" id="city" type="text" placeholder="City" name="name">
                            </div>

                            <div class="form-group">
                                <label for="Photo">Photo URL</label>
                                <input class="form-control" id="photo" type="text" placeholder="Imageurl" name="image">
                            </div>

                            <div class="form-group">
                                <label for="comment">Few words about this place</label>
                                <textarea class="form-control" rows="5" id="comment" name="about"></textarea>
                            </div>

                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" name="place" value="visited" id="Check1">
                                <label class="form-check-label" for="Check1">VISITED</label>
                                <input type="checkbox" class="form-check-input" name="place" value="bucket" id="Check2">
                                <label class="form-check-label" for="Check2">BUCKET-LIST</label>
                            </div>
                            <div class="form-group">
                                <label for="date">When did you travel here?</label>
                                <input class="form-control" id="date" type="text" placeholder="YYYY/MM/DD" name="date">
                            </div>
                            <p id="u2"></p>
                            <div class="form-group text-right ">
                                <button class="btn btn-xs btn-primary ">ADD PLACE</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
        function my() {
            var x = document.forms["myform"]["name"].value;
            var y = document.forms["myform"]["image"].value;
            var z = document.forms["myform"]["about"].value;
            var a = document.forms["myform"]["date"].value;
            if (x == "" || y == "" || z == "" || a == "") {
                document.getElementById("u2").innerHTML = "*All fields are reuired"
                return false;
            }
        }
    </script>
